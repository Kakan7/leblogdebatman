{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{%block css%}
    <script src="https://www.google.com/recaptcha/api.js"></script>
{%endblock%}

{% block body %}
    <div class="container-fluid">

        <div class="row">
            <h1 class="col-12 text-center my-5">Créer un compte</h1>
        </div>

        <div class="row">
            <div class="col-12 col-md-8 col-lg-4 mx-auto">

                {{ form_start( registrationForm ) }}
                <div class="mb-3">{{form_errors(registrationForm)}}</div>
                {{form_row(registrationForm.email)}}
                {{form_row(registrationForm.plainPassword)}}
                {{form_row(registrationForm.pseudonym)}}
                <div class="mb-3">
                    <div class="mb-2">Captcha de sécurité</div>
                    <div class="g-recaptcha" data-sitekey="{{ google_recaptcha_site_key }}"></div>
                </div>
                {{form_row(registrationForm.save)}}
                {{ form_end( registrationForm )}}
            </div>
        </div>
    </div>
{% endblock %}
